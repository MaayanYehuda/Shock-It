<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- כפתור הזמנות צף בפינה השמאלית תחתונה -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="הזמנות"
        android:src="@drawable/en"
        app:backgroundTint="#9DC183"
        app:layout_anchorGravity="bottom|start"
        app:elevation="6dp" />

    <!-- מפת גוגל תופסת את כל שטח המסך -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- גיליון תחתון (BottomSheet) שניתן למשוך למעלה -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white" >

            <!-- ידית אחיזה קטנה למשיכת ה-BottomSheet -->
            <View
                android:layout_width="48dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/list_view_border_background" />

            <!-- מכולה עבור הכותרת וכפתור החיפוש -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/openSearchButton"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="פתח חיפוש"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#9DC183" />

                <TextView
                    android:id="@+id/nearbyMarketsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@id/openSearchButton"
                    android:layout_marginStart="16dp"
                    android:text="רשימת שווקים קרובים"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <!-- מכולה עבור תיבת החיפוש, מוסתרת כברירת מחדל -->
            <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_edittext_background"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right_smst"
                    android:contentDescription="חזור לרשימה המקורית"
                    android:padding="12dp"
                    android:visibility="gone"
                    app:tint="#888888" />

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="חפש מוצרים, שווקים או חקלאים..."
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:imeOptions="actionSearch"
                    android:inputType="text"/>

                <ImageButton
                    android:id="@+id/clearSearchButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="נקה חיפוש"
                    android:padding="12dp"
                    android:src="@drawable/ic_clear_smst"
                    android:visibility="gone"
                    app:tint="#888888" />

                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="התחל חיפוש"
                    android:src="@android:drawable/ic_menu_search"
                    android:padding="12dp"
                    app:tint="#4CAF50" />
            </LinearLayout>

            <View
                android:id="@+id/separatorView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#9DC183"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/marketsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
