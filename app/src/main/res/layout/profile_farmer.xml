<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/farmer_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".FarmerProfile">

    <!-- תמונת החקלאי -->
    <ImageView
        android:id="@+id/farmerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/farm3"
        android:contentDescription="תמונת החקלאי"
        android:scaleType="centerCrop"
        android:src="@drawable/avokado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- שם החקלאי -->
    <TextView
        android:id="@+id/farmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם החקלאי"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/farmerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- תיאור קצר -->
    <EditText
        android:id="@+id/farmerDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="תיאור קצר על החקלאי..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="start|top"
        android:backgroundTint="@color/green"
        android:textColor="@color/dark_green"
        android:textColorHint="#888"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/farmerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- רשימת מוצרים - ScrollView -->
    <ScrollView
        android:id="@+id/productsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/farmerDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/productsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- כאן תוסיף דינמית את המוצרים של החקלאי -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מוצר 1"
                android:padding="8dp"
                android:background="#E0F2F1"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />
            <Button
                android:id="@+id/backToMainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="חזור למסך הראשי"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
