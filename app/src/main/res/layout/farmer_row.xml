<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- שינוי: גובה ה-LinearLayout הפנימי שונה ל-match_parent כדי למנוע התנגשויות -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#E8F5E9"
        android:padding="16dp">

        <ImageView
            android:id="@+id/farmerImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_farmer"
            app:tint="#424242"
            android:contentDescription="חקלאי" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/farmerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם החקלאי"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/farmerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דוא''ל"
                android:layout_marginTop="4dp"
                android:textColor="#757575"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_chevron_left"
            app:tint="#BDBDBD"
            android:contentDescription="לפרטים" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
