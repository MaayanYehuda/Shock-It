<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/marketImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avokado"
            android:background="#EEEEEE"
            android:contentDescription="转 砖 砖拽" />

        <TextView
            android:id="@+id/marketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="砖 砖拽"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/marketLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 拽: 驻专拽 转注砖转 专拽转"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/marketHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 砖注转: 09:00 - 14:00"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/marketDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 转专: 22.04.2025"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/navigateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 注 Waze Л"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9DC183"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_waze"
            android:padding="12dp" />

        <TextView
            android:id="@+id/farmersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拽 砖转转驻:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingTop="32dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/farmersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp" />

        <Button
            android:id="@+id/backToMainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 专 住 专砖"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
