<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layoutDirection="rtl">

        <!-- כותרת -->
        <TextView
            android:id="@+id/farmerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="פרופיל החקלאי"
            android:textColor="#9DC183"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- שם -->
        <TextView
            android:id="@+id/farmerNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם:"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/farmerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="יוסי לוי"
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- מייל -->
        <TextView
            android:id="@+id/farmerEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אימייל:"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/farmerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yossi@example.com"
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- מוצרים -->
        <TextView
            android:id="@+id/productsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מוצרים:"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/farmerProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אבוקדו, עגבניות, שמן זית"
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- שווקים -->
        <TextView
            android:id="@+id/marketsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שווקים בהם הוא משתתף:"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/farmerMarkets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שוק תוצרת מקומית בכרמיאל, שוק איכרים בקיבוץ עברון"
            android:textSize="16sp"
            android:textColor="#444444" />

    </LinearLayout>
</ScrollView>
