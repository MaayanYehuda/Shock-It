<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="אישור יצירת שוק חדש"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/detailsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פרטי השוק:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6A9052"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/marketDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תאריך: 10/10/2025\nשעות: 09:00 - 18:00\nמיקום: שוק הפשפשים"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/warningMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="לאחר יצירת השוק לא תהיה אפשרות לשינוי או ביטול. האם אתה בטוח שברצונך להקים שוק זה?"
        android:textColor="#E53935"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ביטול"
            android:textColor="#9DC183"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#9DC183"
            android:text="אישור"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>